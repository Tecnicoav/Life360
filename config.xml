<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.helloworld"
        version   = "1.0.0">
	
<platform name="ios" />
<platform name="android" />
<platform name="winphone" />

	<icon src="icon.png" />
	    <icon src="res/icon/android/drawable-hdpi-icon.png"   gap:platform="android"    gap:qualifier="ldpi" />
	    <icon src="res/icon/android/drawable-hdpi-icon.png"   gap:platform="android"    gap:qualifier="mdpi" />
	    <icon src="res/icon/android/drawable-hdpi-icon.png"   gap:platform="android"    gap:qualifier="hdpi" />
	    <icon src="res/icon/android/drawable-hdpi-icon.png"  gap:platform="android"    gap:qualifier="xhdpi" />
	    
    <splash src="splash.jpg" />
	<splash src="splash.png" platform="android" qualifier="ldpi" />
	<splash src="splash.png" platform="android" qualifier="mdpi" />
	<splash src="splash.png" platform="android" qualifier="hdpi" />
	<splash src="splash.png" platform="android" qualifier="xhdpi" />
	<splash src="splash.png" platform="android" qualifier="fr-xhdpi" />
	<splash src="splash.png" platform="android" qualifier="port-xxhdpi" />
	<splash src="splash.png" platform="android" qualifier="land-xxhdpi" />

</widget>
